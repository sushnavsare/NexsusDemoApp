<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_todo_detail_background">

    <TextView
        android:id="@+id/tv_todo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="sans-serif"
        android:text="Title:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/_14sdp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_todo_title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/tv_todo_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Take the dogs out."
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_16sdp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_todo_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="sans-serif"
        android:text="Description:"
        app:layout_constraintTop_toBottomOf="@id/tv_todo_title_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/_14sdp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_todo_description_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/tv_todo_description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Don't forget to buy food for him."
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_16sdp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_todo_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="sans-serif"
        android:text="Tags:"
        app:layout_constraintTop_toBottomOf="@id/tv_todo_description_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/_14sdp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_todo_tags_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="sans-serif"
        android:text="dog animal"
        app:layout_constraintTop_toBottomOf="@id/tv_todo_tags"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_16sdp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/tv_todo_due"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="sans-serif"
        android:text="Due:"
        app:layout_constraintTop_toBottomOf="@id/tv_todo_tags_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/_14sdp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_todo_due_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="sans-serif"
        android:text="dog animal"
        app:layout_constraintTop_toBottomOf="@id/tv_todo_due"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_16sdp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_todo_due_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_todo_due_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_8sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_edit_todo_item"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="EDIT"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/colorRed"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/button_complete_todo_item"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:text="MARK AS COMPLETED"
            android:textColor="@color/colorRed"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>